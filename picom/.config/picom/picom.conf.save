# Backend
backend = "glx";

# VSync
vsync = true;

# Shadows
shadow = true;
no-dnd-shadow = true;
no-dock-shadow = true;
shadow-radius = 12;
shadow-offset-x = -12;
shadow-offset-y = -12;
shadow-opacity = 0.5;

# Opacity
inactive-opacity = 0.85;
active-opacity = 0.85;

# Fading
fading = true;
fade-delta = 4;
fade-in-step = 0.03;
fade-out-step = 0.03;

# Blur
blur-method = "dual_kawase";
blur-strength = 1;
blur_background_frame = false;

# Other
detect-client-opacity = true;
corner-radius = 5;

rounded-corners-exclude = [
#  "class_g = 'Xfce4-panel'"
];  
# Exclude certain apps from blur
blur-background-exclude = [
  "class_g = 'Alacritty'"
];

# Opacity exceptions
opacity-rule = [ 
  "100:class_g = 'Xfce4-screenshooter'",
  "95:class_g = 'firefox'",
  "95:class_g = 'zen-alpha'",
  "100:class_g = 'Xviewer'",
  "95:class_g = 'code'",
  "95:class_g = 'steam'"
];

shadow-exclude = [
  "class_g = 'zen-alpha'",
  "class_g = 'Xfce4-panel'",
  "class_g = '
  "class_g = 'Xfce4-screenshooter'"
];
